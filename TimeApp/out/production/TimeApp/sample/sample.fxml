<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.DatePicker?>
<GridPane fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <Label text="Enter your date of birth DD/MM/YYY" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <Label text="or choose from the calendar" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <DatePicker fx:id ="dateOfBirth" GridPane.rowIndex="2" GridPane.columnIndex="0" onAction="#showAge"/>

    <Label fx:id="daysField"  GridPane.rowIndex="3" GridPane.columnIndex="0"/>
    <Label fx:id="hoursField"  GridPane.rowIndex="4" GridPane.columnIndex="0"/>
    <Label fx:id="minutesField"  GridPane.rowIndex="5" GridPane.columnIndex="0"/>
    <Label fx:id="secondsField"  GridPane.rowIndex="6" GridPane.columnIndex="0"/>
</GridPane>